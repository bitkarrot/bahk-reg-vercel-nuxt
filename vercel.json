{
    "version": 2,
    "builds": [{
            "src": "nuxt.config.js",
            "use": "@nuxtjs/vercel-builder",
            "config": {
                "serverFiles": ["server-middleware/**"]
            }
        },
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [{
            "src": "/api/contents/(?<id>[^/]+)",
            "dest": "/api/contents/[id].js?id=$id",
            "methods": ["GET", "OPTIONS", "POST"],
            "headers": {
                "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
                "Access-Control-Allow-Headers": "Content-Type"
            }
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/$1.js",
            "methods": ["GET", "OPTIONS", "POST"],
            "headers": {
                "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
                "Access-Control-Allow-Headers": "Content-Type"
            }
        }
    ]
}